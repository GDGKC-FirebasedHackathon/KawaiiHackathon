<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_item_suggestion_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.corikachu.yourname.CircleImageView
            android:id="@+id/recyclerview_item_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/image_user_profile" />

        <TextView
            android:id="@+id/recyclerview_item_suggestion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/recyclerview_item_profile_image"
            android:text="suggestion name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recyclerview_item_suggestion_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="5dp"
            android:text="@string/rating_like"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
